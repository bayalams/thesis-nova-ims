# =============================================================================
# Provider Selection
# =============================================================================
# Web app currently runs OpenAI mode for stability.
# auto = same as openai (Azure path is disabled in web app for now)
# openai = force OpenAI
export LLM_PROVIDER="auto"

# =============================================================================
# OpenAI (used when provider=openai OR provider=auto without Azure creds)
# =============================================================================
export OPENAI_API_KEY="your-openai-api-key"
export OPENAI_LLM_MODEL="gpt-4o-mini"
export OPENAI_EMBEDDING_MODEL="text-embedding-3-large"
# Optional custom base URL
# export OPENAI_BASE_URL="https://api.openai.com/v1"

# =============================================================================
# Optional Azure settings (kept for embedder compatibility if you use it)
# =============================================================================
# export AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"
# export AZURE_OPENAI_API_KEY="your-azure-api-key"
# export AZURE_OPENAI_API_VERSION="2024-02-15-preview"
# export AZURE_LLM_DEPLOYMENT="your-gpt-deployment-name"
# export AZURE_EMBEDDING_DEPLOYMENT="your-embedding-deployment-name"

# =============================================================================
# Scraping
